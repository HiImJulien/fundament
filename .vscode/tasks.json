{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "clean",
            "type": "shell",
            "command": "python3 waf clean",
            "windows": {
                "command": "py waf clean"
            },
        },
        {
            "label": "build",
            "type": "shell",
            "command": "python3 waf build",
            "problemMatcher": "$gcc",
            "windows": {
                "command": "py waf build",
                "problemMatcher": "$msCompile"
            }
        },
        {
            "label": "configure",
            "type": "shell",
            "command": "python3 waf configure",
            "windows": {
                "command": "py waf configure"
            }
        }
    ]
}